<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AppStartActivity">

    <!--  <com.airbnb.lottie.LottieAnimationView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:lottie_url="https://assets7.lottiefiles.com/packages/lf20_11MIUz.json"
          app:lottie_autoPlay="true"
          app:lottie_loop="true"
          android:id="@+id/lottieAnimation"/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:src="@drawable/mainmobile" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bgcardbottommain"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDriver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_button"
            android:text="Register a Car"
            android:textAllCaps="false"
            android:textColor="#40B59F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_outline"
            android:text="Book a Car"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>