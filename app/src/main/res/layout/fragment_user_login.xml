<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".customer.fragments.UserLoginFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/lighterGrey"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/etUserLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_outline"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/etUserLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_outline"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp" />

            <Button
                android:id="@+id/btnUserLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:onClick="loginUser"
                android:text="Login"
                android:textColor="@color/lighterGrey" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>