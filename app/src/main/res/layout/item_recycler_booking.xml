<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/carCardView"
    android:elevation="20dp"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Civic"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tvCarName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Model"
                android:layout_below="@+id/tvCarName"
                android:id="@+id/tvCarModel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car City"
                android:layout_below="@+id/tvCarModel"
                android:id="@+id/tvCarCity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Status"
                android:layout_below="@+id/tvCarCity"
                android:id="@+id/tvCarStatus"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Book"
                android:textSize="10sp"
                android:id="@+id/btnBook"
                android:background="@drawable/bg_button_color"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/civic_image"
            android:layout_centerVertical="true"
            android:id="@+id/ivVehicle"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>